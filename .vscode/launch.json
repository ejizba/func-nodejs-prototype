{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Node Functions",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "preLaunchTask": "func: host start"
        },
        {
            "name": "Launch Unit Tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "test"
            ],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        }
    ]
}